# Playwright Browser Configuration
# This file ensures the MCP server can find installed browsers

# Tell Playwright where browsers are installed
export PLAYWRIGHT_BROWSERS_PATH="$HOME/Library/Caches/ms-playwright"

# Explicit browser paths for MCP
export WEBKIT_EXECUTABLE_PATH="$HOME/Library/Caches/ms-playwright/webkit-2215/Playwright.app/Contents/MacOS/Playwright"
export CHROMIUM_EXECUTABLE_PATH="$HOME/Library/Caches/ms-playwright/chromium-1198/chrome-mac/Chromium.app/Contents/MacOS/Chromium"
export FIREFOX_EXECUTABLE_PATH="$HOME/Library/Caches/ms-playwright/firefox-1495/firefox/Firefox.app/Contents/MacOS/firefox"
